            <field name="key">custom_seedforce.harvest_success</field>
        <field name="arch" type="xml">
        <t name="Thanks" t-name="custom_seedforce.harvest_success">
   
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
