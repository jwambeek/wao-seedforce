<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="menu_partner_form" model="website.menu">
            <field name="name">Create Customer</field>
            <field name="url">/customer/form</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">22</field>
        </record>


    <template id="tmp_customer_form" name="Partner Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <form action="/customer/form/submit">

                            <div class="form-group">
                                <label for="partner_shipping_id">Name:</label>
                                <input type="text" class="form-control" name="partner_shipping_id" id="partner_shipping_id" required="true" />
          
                            </div>
                            <!--<div class="form-group">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" name="email" id="email" required="true" />
                            </div>
                            <div class="form-group">
                                <label for="name">Phone:</label>
                                <input type="text" class="form-control" name="phone" id="phone" required="true" />
                            </div>-->
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>
              </div>
          </t>
    </template>


    <template id="tmp_customer_form_success" name="Customer Form Successfully Submitted">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <div class="alert alert-success">
                            Customer created successfully.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>


 </data>   
</odoo>