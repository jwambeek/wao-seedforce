<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    

    <template id="signup_form" inherit_id="auth_signup.fields">
    <xpath expr="//div[@class='form-group field-name']" position='replace'>

            <div class="form-group field-ngr">
                <label for="name">NGR Number</label>
                <input type="text" name="ngr" t-att-value="ngr" id="ngr" class="form-control form-control-sm" autofocus="autofocus"
                 required="required" t-att-readonly="'readonly' if only_passwords else None"/>
            </div>
</xpath>
</template>


        

    
</odoo>
